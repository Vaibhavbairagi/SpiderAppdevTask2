<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@color/White">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="@drawable/h6"
        android:id="@+id/imageview"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/entertext"
        android:layout_toStartOf="@+id/imageview"
        android:text="Enter Letter"
        android:textColor="@color/Black"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="27dp"
        android:textSize="15sp"
        android:text="Best Score :"
        android:textColor="@color/Black"/>

    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageview"
        android:layout_alignTop="@+id/textView"
        android:text="0"
        android:textSize="15sp"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="81dp"
        android:text="Your Score :"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/currentscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="53dp"
        android:text="0"
        android:textColor="@color/Black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/puzzleword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Black"
        android:text="                  "
        android:layout_marginBottom="190dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/entertext"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/t1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text="Check" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/t1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:text="Used Letters :"
        android:textColor="@color/Black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/UsedLetters"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignTop="@+id/textView6"
        android:textColor="@color/Black"
        android:textSize="18sp"/>

</RelativeLayout>